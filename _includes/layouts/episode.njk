---
layout: base
---
<article class="post h-entry">
    <header>
        <h1 class="post-title p-name">№ {{ number }} {{ title }}</h1>
        <time class="post-date dt-published" datetime='{{ date }}'>{{ date | readableDate }}</time>
    </header>
    
    <div class="e-content">
        <audio src="{{ metadata.cdn_url }}/{{ page.fileSlug }}.mp3" preload="metadata" controls>
        </audio>
        
        <p>{{ description }}</p>

        <details class="spoilers">
            <summary>Expand for show notes. Spoilers!</summary>
            {{ content | safe }}

            {% if notes %}
            <h2>Notes</h2>
            <ul>
            {% for note in notes %}
              <li>{{note | safe}}
            {% endfor %}
            </ul>
            {% endif %}
        </details>
    
        <h2>Feedback</h2>
        <p class="contact">
            Email us <a href="mailto:tto@koser.us">tto@koser.us</a> or comment below
        </p>
    </div>
    
    <footer>
        <nav>
            {% set previousItem = collections.episodes[number - 2] %}
            {% set nextItem = collections.episodes[number] %}

            {% if previousItem %}
                <div class="previous"><a rel="prev" href="{{ previousItem.url }}" >« [i] № {{ previousItem.data.number }} {{ previousItem.data.title }}</a></div>
            {% endif %}
            {% if nextItem %}
                <div class="next"><a rel="next" href="{{ nextItem.url }}" >№ {{ nextItem.data.number }} {{ nextItem.data.title }} [i] »</a></div>
            {% endif %}
        </nav>
    </footer>
</article>